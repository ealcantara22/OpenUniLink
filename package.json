{
  "name": "openunilink",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/bundle.js",
    "build:ts": "tsc --noEmit",
    "dev": "ts-node src/index.ts daemon --config ./config/example.config.yaml",
    "lint": "eslint src --ext .ts",
    "lint-fix": "eslint --ext.ts --fix",
    "sea:blob": "node --experimental-sea-config sea-config.json",
    "sea:inject": "bash ./scripts/build-sea.sh",
    "sea": "npm run build && npm run sea:blob && npm run sea:inject"
  },
  "keywords": [
    "fans",
    "rgb",
    "lian-li",
    "linux",
    "daemon"
  ],
  "author": "",
  "license": "LGPL-3.0-or-later",
  "description": "Vendor-neutral control for PC cooling, RGB, and LCD peripherals on Linux.",
  "dependencies": {
    "commander": "^14.0.2",
    "node-hid": "^3.2.0",
    "pino": "^10.1.0",
    "systeminformation": "^5.27.11",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/commander": "^2.12.0",
    "@types/node": "^24.10.1",
    "@types/node-hid": "^1.3.4",
    "@types/pino": "^7.0.4",
    "@types/systeminformation": "^3.23.1",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/parser": "^8.48.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "postject": "^1.0.0-alpha.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
